{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "types": "object",
  "required": [
    "types"
  ],
  "additionalProperties": false,
  "properties": {
    "$": {
      "type": "string"
    },
    "$schema": {
      "type": "string"
    },
    "provider": {
      "type": "string",
      "enum": [
        "github",
        "gitlab",
        "custom"
      ]
    },
    "types": {
      "type": "array"
    },
    "scopes": {
      "type": "array"
    },
    "titleFormat": {
      "type": "string"
    },
    "branchNameFormat": {
      "type": "string"
    }
  }
}