{
  "$schema": "../../schema.json",
  "provider": "gitlab-runner",
  "common_scopes": [
    "app",
    "server",
    "test"
  ],
  "types": [
    {
      "type": "feat",
      "scopes": [
        "entity",
        "useCase",
        "presentation",
        "infra"
      ]
    },
    {
      "type": "fix"
    },
    {
      "type": "docs"
    },
    {
      "type": "style"
    },
    {
      "type": "refactor"
    }
  ],
  "titleFormat": "${type}(${scope}): .+ ${mr} ${issues}"
}